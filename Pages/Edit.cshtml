@page
@model BugNet.Pages.EditModel
@{
}
<h1>Edit Bug</h1>
<div class="row">
    <div class="col-6">
        <form method="post">
            <input asp-for="SelectedBug.Id" hidden />
            <input asp-for="SelectedBug.Name" class="form-control" />
            <textarea asp-for="SelectedBug.Description" class="form-control">

            </textarea>
            <div>
                Is Done 
                <input asp-for="SelectedBug.IsDone" class="check mb-3" />
            </div>
            <br />
            <button class="btn btn-primary">Save</button>
        </form>

    </div>

</div>
